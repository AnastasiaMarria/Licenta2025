@page "/"
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Authorization
@namespace DineSure.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="DineSure.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="Server" />
    
    <!-- Hidden logout form -->
    <form id="logoutForm" method="post" action="/Account/Logout" style="display: none;"></form>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <persist-component-state />
    
    <script src="_framework/blazor.server.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Chart.js - Local copy for reliability -->
    <script src="js/chart.min.js"></script>
    <script src="js/charts.js?v=20240101"></script>
    <script>
        // Verify Chart.js loaded
        window.addEventListener('DOMContentLoaded', function() {
            console.log('🚀 DOM loaded - checking Chart.js...');
            console.log('📊 Chart.js available:', typeof Chart !== 'undefined');
            console.log('📊 Chart version:', typeof Chart !== 'undefined' ? Chart.version : 'Not loaded');
            console.log('📊 Chart helper functions loaded:', typeof window.createLineChart === 'function');
            
            if (typeof Chart === 'undefined') {
                console.error('❌ Chart.js failed to load! Charts will not work.');
            } else {
                console.log('✅ Chart.js loaded successfully!');
            }
        });
    </script>
    
    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    <!-- Scriptul tău map.js -->
    <script src="js/map.js?v=20240101"></script>
    

</body>
</html>
